<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff3e0"
    tools:context="com.fernandez.fernandez_labexer2.SecondActivity">

    <Button
        android:id="@+id/bt_loadShared"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:onClick="callLoadPreferences"
        android:text="Load Shared Preferences"
        android:background="#c5e1a5"/>

    <Button
        android:id="@+id/bt_loadInternal"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_below="@+id/bt_loadShared"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:onClick="callLoadInternalStorage"
        android:text="Load Internal Storage"
        android:background="#4db6ac"
        />

    <Button
        android:id="@+id/bt_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bt_loadInternal"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="32dp"
        android:onClick="callClear"
        android:text="Clear"
        android:background="#ce93d8"/>

    <Button
        android:id="@+id/bt_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bt_clear"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:onClick="callBack"
        android:text="Back"
        android:background="#90caf9"/>

    <TextView
        android:id="@+id/tv_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bt_back"
        android:layout_alignStart="@+id/bt_clear"
        android:layout_below="@+id/bt_clear"
        android:layout_marginTop="45dp"
        android:textSize="18sp"
        android:textColor="#263238"/>
</RelativeLayout>


